{
  "name": "globalcool-light",
  "version": "1.0.0",
  "description": "Global Cool-Light E.A LTD - HVAC Portfolio & Management Platform",
  "main": "index.js",
  "scripts": {
    "build-css": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./static/css/input.css -o ./static/css/output.css --minify",
    "dev": "concurrently \"npm run build-css\" \"python manage.py runserver\"",
    "build": "npm run build-css-prod"
  },
  "keywords": [
    "django",
    "tailwindcss",
    "htmx",
    "hvac",
    "portfolio"
  ],
  "author": "Global Cool-Light Team",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "htmx.org": "^1.9.9",
    "alpinejs": "^3.13.3"
  }
}
